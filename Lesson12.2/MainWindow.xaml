<Window x:Class="Lesson12._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson12._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Name="Label_Seconds" Content="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48"/>
        <Button x:Name="Btn_Start" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="0,0,200,100" Click="Btn_Start_Click"/>
        <Button x:Name="Btn_Stop" Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="0,0,0,100" Click="Btn_Stop_Click"/>
        <Button x:Name="Btn_Drop" Content="Drop" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="200,0,0,100" Click="Btn_Drop_Click"/>
    </Grid>
</Window>
